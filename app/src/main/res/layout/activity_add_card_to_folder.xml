<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCardToFolder">

    <Spinner
        android:id="@+id/spnChonBoThe"
        android:layout_width="333dp"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="Chọn Folder:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtThemFontCard"
        android:layout_width="330dp"
        android:layout_height="65dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="text"
        android:text="Name"
        app:layout_constraintStart_toStartOf="@+id/spnChonBoThe"
        app:layout_constraintTop_toBottomOf="@+id/spnChonBoThe" />

    <EditText
        android:id="@+id/edtThemBackCard"
        android:layout_width="328dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="text"
        android:text="Name"
        app:layout_constraintStart_toStartOf="@+id/edtThemFontCard"
        app:layout_constraintTop_toBottomOf="@+id/edtThemFontCard" />

    <Button
        android:id="@+id/btnAddCardToFolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Thêm Thẻ"
        app:layout_constraintEnd_toEndOf="@+id/edtThemBackCard"
        app:layout_constraintTop_toBottomOf="@+id/edtThemBackCard" />
</androidx.constraintlayout.widget.ConstraintLayout>